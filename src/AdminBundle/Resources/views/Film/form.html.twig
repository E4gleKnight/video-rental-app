{% extends 'admin.html.twig' %}

{% block body %}

    <h1>Nouveau film</h1>
    {{ form_row(movieForm.title) }}

    {{ form_row(movieForm.duration) }}

    {{ form_row(movieForm.releaseDate) }}

    {{ form_row(movieForm.language) }}

    {{ form_row(movieForm.nationality) }}

    {{ form_row(movieForm.category) }}

    {{ form_row(movieForm.director) }}

    {{ form_row(movieForm.title) }}

    {{ form_row(movieForm.actors) }}

    <a href="#" id="add_actor" class="btn btn-default add-btn">Ajouter un acteur</a>

